<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
	<classPathEntry
		location="C:\Users\kcrkn\.m2\repository\com\mysql\mysql-connector-j\8.3.0\mysql-connector-j-8.3.0.jar" />
	<context id="context1" targetRuntime="MyBatis3">

		<!-- MapperにMapperアノテーションを付与 -->
		<plugin
			type="org.mybatis.generator.plugins.MapperAnnotationPlugin" />
		<!-- マッパxmlファイルを生成時に上書きするためのプラグイン -->
		<plugin
			type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin" />

		<!-- コメント生成の抑制 -->
		<commentGenerator>
			<property name="suppressDate" value="true" />
			<property name="addRemarkComments" value="false" />
		</commentGenerator>

		<!-- JDBCの設定 -->
		<jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
			connectionURL="jdbc:mysql://localhost:3306/ecommerce" userId="root"
			password="softeni0926" />

		<javaTypeResolver>
			<property name="forceBigDecimals" value="false" />
			<property name="useJSR310Types" value="true" />
		</javaTypeResolver>

		<!-- Entityの生成場所 -->
		<javaModelGenerator
			targetPackage="com.example.domain.model.entity"
			targetProject="src/main/java" />

		<!-- Mapper(xml)の生成場所 -->
		<sqlMapGenerator
			targetPackage="com.example.domain.mapper"
			targetProject="src/main/resources" />


		<!-- Mapper(java)の生成場所 -->
		<javaClientGenerator
			targetPackage="com.example.domain.mapper"
			targetProject="src/main/java/" type="XMLMAPPER" />

		<!--TODO: 将来的にフォルダを分ける -->
		<!-- 生成対象のテーブル -->
		<table tableName="user">
			<columnOverride column="role"
				javaType="com.example.domain.model.enums.UserRole" />
			<columnOverride column="gender"
				javaType="com.example.domain.model.enums.Gender" />
		</table>
		<table tableName="prefecture" />
		<table tableName="product" />
		<table tableName="category" />
		<table tableName="review" />

	</context>
</generatorConfiguration>